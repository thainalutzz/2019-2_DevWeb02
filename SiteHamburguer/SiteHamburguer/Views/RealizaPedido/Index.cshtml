@model IEnumerable<SiteHamburguer.Models.PEDIDO_HAMBURGUER>

@{
    ViewBag.Title = "Pedido";
}

<h2>Pedido @Html.DisplayName(Session["pedidoCOD"].ToString()): </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("HAMBURGUER(ES) :")
        </th>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Confirmar", "Finalizar")
            &nbsp|&nbsp
            @Html.ActionLink("Adicionar outro", "CreateItemPedido")
        </td>
    </tr>
    @{int count = 1;}
    @{double preco = 0;}
</table>
<table class="table">
    @foreach (var item in Model)
    {

        <tr>
            <th>
                @Html.DisplayName("HAMBURGUER " + count++)
            </th>
            <th>


            </th>
        </tr>
        <tr>
            <td>
                R$ @Html.DisplayFor(modelItem => item.PRECO_TOTAL_PED_HAM)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.COD_HAMBURGUER_FK }) |*@
                @Html.ActionLink("Deletar", "Delete", new { id = item.COD_HAMBURGUER_FK })
            </td>
        </tr>
        preco += (double)item.PRECO_TOTAL_PED_HAM;
    }
</table>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Preço Total do Pedido: R$" + preco.ToString())
        </th>
    </tr>
</table>
