@model SiteHamburguer.Models.HAMBURGUER

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Voce tem certeza que deseja excluir este hamburguer ?</h3>
<div>
    <h4>HAMBURGUER</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Numero do pedido")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COD_HAMBURGUER)
        </dd>

        <dt>
            @Html.DisplayName("Preço do pedido")
        </dt>

        <dd>
            R$ @Html.DisplayFor(model => model.PRECO_HAMBURGUER)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
