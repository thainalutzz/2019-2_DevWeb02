@using SiteHamburguer.Models;
@model SiteHamburguer.Models.InfoLogin

<h2>Consumidor</h2>
<style>
    #login-div {
        text-align: center;
        width: 200px;
        height: 200px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -100px;
        margin-top: -100px;
    }

    .cadastro {
        text-align: center;
        width: 200px;
        height: 200px;
        position: absolute;
        top: 100%;
        left: 70%;
        margin-left: -100px;
        margin-top: -100px;
    }

    .textoCadastro {
        font-size: 18px;
    }

    .field-validation-error {
        color: red;
    }
</style>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Autorize", "LoginConsumidor", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    @*<td style="text-decoration:underline">Teste</td>*@
                </tr>
                <tr>
                    <td>
                        @Html.Label("Usuário")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.CLIENTE.NOME)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.ValidationMessageFor(model => model.COMSUMIDOR.SENHA_CON)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Senha")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.COMSUMIDOR.SENHA_CON)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.ValidationMessageFor(model => model.COMSUMIDOR.SENHA_CON)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErroMessagem)</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />
                    </td>

                </tr>

            </table>

        }

        <div class="cadastro">
            <h1 class="textoCadastro">Ainda nao possui um cadastro?</h1>
            <a class="a1" href="@Url.Action("Create", "Consumidor")">Cadastrar</a>
        </div>
    </div>
    <a class="a1" href="@Url.Action("Index", "Home")">Voltar</a>


    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
