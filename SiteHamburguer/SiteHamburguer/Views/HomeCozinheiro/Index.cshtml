@model IEnumerable<SiteHamburguer.Models.PEDIDO>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número do Pedido")
        </th>
        <th>

            @Html.DisplayName("Preço do Pedido")

        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.COD_PEDIDO)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => item.PRECO_PEDIDO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STATUS)
            </td>

            <td>

                @Html.ActionLink("Aceitar", "Details", new { id = item.COD_PEDIDO })
            </td>
        </tr>
    }

</table>
